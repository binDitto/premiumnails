<div class="container">

    <%= link_to 'Back', posts_path, class: "btn btn-lg btn-default" %>
  <% if logged_in? && current_user == @post.user %>
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-primary " %>
    <%= link_to 'Delete', post_path(@post), method: :delete,
                                            data: { confirm: "Are you sure?" },
                                            class: "btn btn-primary btn-danger" %>
  <% end %>

    <hr>
    <h1>Show Page</h1>
    <hr>
    <h4><%= @post.title %></h4>
    <hr>
    <p>
      <%= @post.description %>
    </p>

  <small>Created <%= time_ago_in_words(@post.created_at) %> ago</small>
  <hr>


  <%= render 'comments/comment', commentobj: @post %>
  <%= render 'comments/form', obj: @post %>



</div>
