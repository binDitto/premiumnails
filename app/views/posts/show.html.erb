<div class="container">

    <%= link_to 'Back', posts_path, class: "btn btn-lg btn-default" %>
  <% if logged_in? && current_user == @post.user %>
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-primary " %>
    <%= link_to 'Delete', post_path(@post), method: :delete,
                                            data: { confirm: "Are you sure?" },
                                            class: "btn btn-primary btn-danger" %>
  <% end %>

    <hr>
    <h1>Show Page</h1>
    <hr>
    <h4><%= @post.title %></h4>
    <hr>
    <p>
      <%= @post.description %>
    </p>

  <small>Created <%= time_ago_in_words(@post.created_at) %> ago</small>
  <hr>
    <ul class="list-group comments">
      <% @post.comments.each do |comment| %>
      <li class="list-group-item">
        <% args= (comment.user == current_user) ? "danger" : "primary" %>
          <small class="pull-left label label-<%= args %>"><%= comment.user.username %>:</small>
          <br/> <%= comment.description %>
          <%= link_to 'Delete', [@post, comment], method: :delete,
                                                  data: { confirm: "Are you sure?" },
                                                  class: "label label-danger" %>
      </li>
      <% end %>
    </ul>

  <% if logged_in? %>
      <hr>
    <%= form_for [@post, @post.comments.build] do |c| %>
      <%= c.text_area :description, class: "form-control", placeholder: "What's your comment?" %>
      <br/>
      <%= c.submit 'Post Comment', class: "enterlist btn btn-default" %>
    <% end %>
  <% end %>


</div>
