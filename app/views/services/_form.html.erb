<div class="container">
  <%= form_for @service do |s| %>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">

        </div>
        <div class="panel-body">
          <div class="form-group">
            <%= s.label :name %>
            <%= s.text_field :name, class: "form-control", placeholder: "Service Name" %>
            <br/>
            <%= s.label :price %>
            <%= s.text_field :price, class: "form-control", placeholder: "$"%>
          </div>
          <hr>
          <div class="form-group">
            <%= s.label :description %>
            <%= s.text_area :description, class: "form-control", placeholder: "Description" %>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-sm-offset-1 col-sm-11">
                <%= s.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                  <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                <% end %>
              </div>
            </div>
          </div>
          <hr>
            <%= s.submit 'Post', class: "btn btn-primary btn-success" %>
            <%= link_to 'Back', services_path, class: "btn btn-primary btn-default" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
