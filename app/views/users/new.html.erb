<div class="container">
  <div class="row">
    <div class=" col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading" align="center">
          <h2>Sign Up</h2>
        </div>
        <div class="panel-body">
        <%= form_for @user do |u| %>
        <div class="form-group">
          <%= u.label :username %>
          <%= u.text_field :username, class: "form-control", placeholder: "Username" %>
        </div>
        <div class="form-group">
          <%= u.label :email %>
          <%= u.text_field :email, class: "form-control", placeholder: "Email" %>
        </div>
        <div class="form-group">
          <%= u.label :password %>
          <%= u.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
          <%= u.submit "Sign Up", class: "btn btn-success" %> <%= link_to 'Cancel', posts_path, class: "btn btn-default" %>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
